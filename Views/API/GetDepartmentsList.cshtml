@model IEnumerable<Department>
@{
    Layout = null;
}

@if (Model.Count() > 0)
{
    <select class="select-depatrment-id" name="departmentId">
        @foreach (var depatrment in Model)
        {
            <option value="@depatrment.id">@depatrment.name</option>
        }
        <option value="0">Нет</option>
    </select>
}